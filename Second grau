            case 25:
                printf("Calcular a Área do Icoságono. \n");
                printf("Digite o valor do lado do Icoságono:");

                    Apotema = Lado / ( 2 * tan(M_PI / 16) );
                    Perimetro = 16 * Lado;
                    Area = ( Perimetro * Apotema ) / 2;

                printf("O valor da Área do Icoságono é: %.2f", Area);
