                break;
            case 35:
                printf("Calcular o Perímetro do Eneágono. \n ");
                printf("Digitie o valor do Perímetro do Eneágono. \n");
                scanf("%f", &Lado);

                    Perimetro = Lado * 9;

                printf("O valor do Perímetro do Eneágono. \n");
                printf("Digite o valor do







                case :
                printf("Saindo da Resolvedora de problemas...");
                break;
            default:
                printf("Opção inválida. Tente novamente.\n");
        }

        if (Opcao != ) {
            printf("Pressione Enter para continuar...");
            getchar();
            getchar();
        }

    } while (Opcao != );
